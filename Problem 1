def get_tshirt(brand):
    def get_name():
        n = input("Enter your name: ")
        return n
    
    user_name = get_name()
    
    if brand == "HNM":
        print("Hi, ", user_name , "you've chosen Adidas. It's available in our store.")
   
    else:
        print("Hi," , user_name , "unfortunately the brand you are looking for is not available in our store")

brand_choice = input("Enter the brand you are looking for: ")
get_tshirt(brand_choice)

