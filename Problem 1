def get_tshirt():
    def get_name():
        n = input()
        return n
    
    user_name = get_name()
    
    sizes = ["S", "M", "L", "XL"]
    size_want = input("Enter the size you want (S, M, L, XL): ")
    
    if size_want in sizes:
        print("Hi, ", user_name , "the size you are looking for is available in our store")
    else:
        print("Hi," , user_name , "unfortunately the size you are looking for is not available in our store")

get_tshirt()
